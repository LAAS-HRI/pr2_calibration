<launch>

  <group ns="calibration_config" >

    <group ns="sensors" clear_params="true">
      <param name="all"    textfile="$(find pr2_calibration_launch)/estimate_params/config_pr2_beta/cov/sensors.yaml" />
    </group>

    <group ns="cal_steps" clear_params="true">
      <group ns="01 - Checkerboard Locations">
        <param name="free_params" textfile="$(find pr2_calibration_launch)/estimate_params/config_pr2_beta/cov/free1.yaml" />
        <rosparam>
          sensors:
          - tilt_laser
          - left_arm_chain
          - right_arm_chain
        </rosparam>
        <param name="output_filename" type="string" value="system1" />
      </group>
      
      <group ns="02 - Adding Arm Joint Offsets and Stereocam Locations">
        <param name="free_params" textfile="$(find pr2_calibration_launch)/estimate_params/config_pr2_beta/free2.yaml" />
        <rosparam>
          sensors:
          - narrow_left_rect
          - narrow_right_rect
          - wide_left_rect
          - wide_right_rect
          - tilt_laser
          - left_arm_chain
          - right_arm_chain
        </rosparam>
        <param name="output_filename" type="string" value="system2" />
      </group>

      <group ns="03 - Adding Stere Baselines">
        <param name="free_params" textfile="$(find pr2_calibration_launch)/estimate_params/config_pr2_beta/free3.yaml" />
        <rosparam>
          sensors:
          - narrow_left_rect
          - narrow_right_rect
          - wide_left_rect
          - wide_right_rect
          - tilt_laser
          - left_arm_chain
          - right_arm_chain
        </rosparam>
        <param name="output_filename" type="string" value="system3" />
      </group>

      <group ns="04 - Adding Tilt Laser Position">
        <param name="free_params" textfile="$(find pr2_calibration_launch)/estimate_params/config_pr2_beta/free4.yaml" />
        <rosparam>
          sensors:
          - narrow_left_rect
          - narrow_right_rect
          - wide_left_rect
          - wide_right_rect
          - tilt_laser
          - left_arm_chain
          - right_arm_chain
        </rosparam>
        <param name="output_filename" type="string" value="system3" />
      </group>     

      <group ns="05 - Adding Forearm Cams and Polishing">
        <param name="free_params" textfile="$(find pr2_calibration_launch)/estimate_params/config_pr2_beta/free6.yaml" />
        <rosparam>
          sensors:
          - narrow_left_rect
          - narrow_right_rect
          - wide_left_rect
          - wide_right_rect
          - forearm_left_rect
          - forearm_right_rect
          - tilt_laser
          - left_arm_chain
          - right_arm_chain
        </rosparam>
        <param name="output_filename" type="string" value="system_calibrated" />
      </group>     

    </group>

    <param name="initial_system" textfile="$(find pr2_calibration_launch)/estimate_params/config_pr2_beta/cov/system.yaml" />

  </group>

  <node pkg="pr2_calibration_estimation" type="multi_step_cov_estimator.py" name="cal_estimator" output="screen"
        args="/tmp/pr2_calibration/cal_measurements.bag /tmp/pr2_calibration/" respawn="False"/>

</launch>
